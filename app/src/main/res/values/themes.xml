<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CourseNoteKeeper" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarPopupTheme">@style/Theme.CourseNoteKeeper.PopupOverlay</item>
    </style>

    <style name="Theme.CourseNoteKeeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CourseNoteKeeper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CourseNoteKeeper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CourseTitle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/pluralsight_orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AddFab" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="srcCompat">@drawable/ic_baseline_add_circle_24</item>
        <item name="tint">@android:color/white</item>
        <item name="backgroundTint">@color/pluralsight_orange</item>
    </style>
</resources>